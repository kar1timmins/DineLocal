# Development Dockerfile for Frontend
FROM node:18-alpine

# Install pnpm
RUN npm install -g pnpm

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY frontend/package*.json ./
COPY frontend/pnpm-lock.yaml* ./
RUN npm install

# Expose port
EXPOSE 3000

# Default command
CMD ["npm", "run", "dev"]